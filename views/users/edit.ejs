<%- include("../partials/header") %>

<div class="container">
      <% if(currentUser && currentUser.isAdmin) { %>
        <h1 class="admin text-center">Admin Account</h1>
    <% } %>
    <h1 class="text-center">Edit Profile</h1>
    <div class="info-box">
        <form action="/users/<%= user.id %>?_method=PUT" method="POST">
            <div class="form-group">
            <% if(!user.avatarURL){ %>
                <input class="form-control" type="text" name="user[avatarURL]" value="https://images.unsplash.com/photo-1546811740-23e671faf31c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1350&q=80" required>
            <% } else { %>
                <input class="form-control" type="text" name="user[avatarURL]" value="<%= user.avatarURL %>" required>
            <% } %>
            </div>
            <% if(!user.description){ %>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[description]" value="This is where you tell us about yourself!! Edit your profile and make it creative and unique to you!! :-)" required>
                </div>
            <% } else { %>
                <div class="form-group">
                    <input class="form-control" type="text" name="user[description]" value="<%= user.description %>" required>
                </div>
            <% } %>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit</button> 
            </div>
        </form>
        <a href="/users/<%= user.id %>">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>
