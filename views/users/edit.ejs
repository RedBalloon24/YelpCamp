<%- include("../partials/header") %>

<div class="container">
    <h1 class="text-center">Edit Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="password" name="user[password]" placeholder="Password">
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="user[email]" placeholder="Email">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[avatarURL]" value="<%= user.avatarURL %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[description]" value="<%= user.description %>">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit</button> 
            </div>
        </form>
        <a href="/users/<%= user.id %>">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>
