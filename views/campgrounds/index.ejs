<%- include("../partials/header") %>

<div class="container">
    <% if(currentUser && currentUser.isAdmin) { %>
        <h1 class="admin text-center">Admin Account</h1>
    <% } %>
    
    <header class="jumbotron">
        <div class="container">
            <h1 class="title"><i class="fas fa-campground"></i> Welcome to YelpCamp!</h1>
            <p class="home-text">View our handpicked campgrounds from all over the world</p>
            <% if(noMatch !== null) { %>
                <div class="text-center mt-5">
                    <a class="btn btn-warning btn-lg" href="/campgrounds">Try Again</a>
                </div>
            <% } else { %>
                <p>
                    <a class="btn btn-primary btn-lg" href="campgrounds/new">Add New Campground</a>
                </p>
                <form action="/campgrounds" method="GET" class="form-inline">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Campground search..." class="form-control mr-2">
                        <input type="submit" value="Search" class="btn btn-outline-dark">
                        <a class="btn btn-outline-info btn ml-3" href="/campgrounds">Reset</a>
                    </div>
                </form>
            <% } %>
           
        </div>
    </header>
    
    <div class="row text-center">
        <div class="col-md-12">
            <% if(noMatch !== null) { %>
                <h3><%= noMatch %></h3>
            <% } %>
        </div>  
    </div>  

    <div class="row text-center">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6 box">
                <div class="img-thumbnail mb-3 p-0">
                    <img src="<%= campground.image %>" class="card-img-top box home-page-img">
                    <div class="card-body pb-1">
                        <h4><%= campground.name %></h4>
                        <div>
                            <span class="badge badge-pill badge-secondary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
                        </div>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </p>
                    
                </div>
            </div>
        <% }) %>
    </div>

    <nav aria-label="Page navigation">
        <% if (pages && pages > 0) { %>
            <ul class="pagination justify-content-center">
                <% if (current == 1) { %>
                    <li class="page-item disabled"><a class="page-link">First</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/campgrounds">First</a></li>
                <% } %>
        
                <% if (current == 1) { %>
                    <li class="page-item disabled"><a class="page-link">«</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/campgrounds?page=<%= Number(current) - 1 %>">«</a></li>
                <% } %>
        
                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                <% if (i !== 1) { %>
                    <li class="page-item disabled"><a class="page-link">...</a></li>
                <% } %>
                <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                    <% if (i == current) { %>
                        <li class="active"><a class="page-link"><%= i %></a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/campgrounds?page=<%= i %>"><%= i %></a></li>
                    <% } %>
                    <% if (i == Number(current) + 4 && i < pages) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                <% } %>
        
                <% if (current == pages) { %>
                    <li class="page-item disabled"><a class="page-link">»</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/campgrounds?page=<%= Number(current) + 1 %>">»</a></li>
                <% } %>
        
                <% if (current == pages) { %>
                    <li class="page-item disabled"><a class="page-link">Last</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/campgrounds?page=<%= pages %>">Last</a></li>
                <% } %>
            </ul>
        <% } %>
    </nav>
</div>


<%- include("../partials/footer") %>