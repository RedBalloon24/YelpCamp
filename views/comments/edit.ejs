<%- include("../partials/header") %>

<div class="container">
    <% if(currentUser && currentUser.isAdmin) { %>
        <h1 class="admin text-center">Admin Account</h1>
    <% } %>
    <h1 class="text-center">Edit Comment</h1>
    <div class="info-box">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" required>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit</button> 
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include("../partials/footer") %>