<%- include("partials/header") %>

<div class="container">
    <h1 class="text-center">Sign Up</h1>
    <div class="info-box">
        <form action="/register" method="POST">
            <div class="form-group">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-user"></i></div>
                    </div>
                    <input class="form-control shadow" type="text" name="username" placeholder="Username">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-lock"></i></div>
                    </div>
                    <input class="form-control shadow" type="password" name="password" placeholder="Password">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-envelope"></i></div>
                    </div>
                    <input class="form-control shadow" type="email" name="email" placeholder="Email">
                </div>
            </div> 
            <hr>  
            <div class="form-group">
                <label for="AdminCode" class="d-flex justify-content-center"><strong>Admin Use Only:</strong></label>
                <div class="input-group mb-2">
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fas fa-key"></i></div>
                    </div>
                    <input class="form-control shadow" id="AdminCode" type="password" name="adminCode" placeholder="Admin Code">
                </div>
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block shadow">Sign Up</button> 
            </div>
        </form>
        <p class="text-center mt-4">Already Registered? <a href="/login">Log in here</a></p>
    </div>
</div>

<%- include("partials/footer") %>